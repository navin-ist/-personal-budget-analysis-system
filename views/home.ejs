<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/accounts">Accounts</a></li>
                <li><a href="/incomes">Incomes</a></li>
                <li><a href="/expenses">Expenses</a></li>
                <li><a href="/budget">Budget</a></li>
                <li><a href="/logout">Log Out</a></li>
            </ul>
        </nav>
    </header>
    <div class="home-container">
        <h2>Welcome, <span class="user-name"><%= user.name %></span>!</h2>
        <div class="summary">
            <div class="summary-box">
                <p>Current Balance</p>
                <p class="amount">$<%= balance %></p>
            </div>
            <div class="summary-box">
                <p>Month's Income</p>
                <p class="amount">$<%= monthIncome %></p>
            </div>
            <div class="summary-box">
                <p>Month's Expense</p>
                <p class="amount">$<%= monthExpense %></p>
            </div>
        </div>
        <div class="transactions">
            <h3>Recent Transactions</h3>
            <table>
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Statement</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(transaction => { %>
                    <tr>
                        <td><%= transaction.time %></td>
                        <td><%= transaction.type %></td>
                        <td>$<%= transaction.amount %></td>
                        <td><%= transaction.statement %></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <form action="/removeAllTransactions" method="POST">
            <button type="submit">Remove all transactions</button>
        </form>
    </div>
</body>
</html>